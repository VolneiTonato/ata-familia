<script>
    
    var LoaderVTT = (function(){
        var $body = $('body');
        
        this.run = function(options){
           
           var defaults = {
             id : '#vtt-mensagem-loader',           
             mensagem : 'Aguarde...'
           };
           
           var settings = $.extend({}, defaults, options);
           
           $body.remove(settings.id)
                .append('{% include "VTTJsBundle:scripts:templates-mensagem/loader.html.twig" %}')
                .find('h1').prop('titulo-mensagem', function(){
                   $(this).text(settings.mensagem);
                }).closest(settings.id);

           $.blockUI({message : $(settings.id)});
       };
       
       this.stop = function(){
           $.unblockUI();
       };
       
        
        return this;
    })();
</script>

