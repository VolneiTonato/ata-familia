{% extends "AtaAppAtaBundle::layout.html.twig" %}


{% form_theme form 'VTTTemplatesJanuxBundle:extras:form.field.html.twig' %}

{% block body %}

    <div class="row-fluid sortable">
        <div class="box span12">
            <div class="box-header" data-original-title>
                <h2><i class="halflings-icon white edit"></i><span class="break"></span>Cadastro ATA</h2>
                <div class="box-icon">
                    <a href="#" class="btn-setting"><i class="halflings-icon white wrench"></i></a>
                </div>
            </div>
            <div class="box-content">
                <form class="form-horizontal">
                    <fieldset>

                        {{ form_row(form.nome) }}

                        {{ form_row(form.municipio.nome) }}

                        {{ form_row(form.municipio.sigla) }}

                        {% include('AtaAppAtaBundle:extras:telefone.form.twig') %}
                        
                        {% include('AtaAppAtaBundle:extras:email.form.twig') %}

                        <div class="form-actions">
                            <button type="submit" onclick="AtaController().save(event,$(this).closest('form'));" class="btn btn-primary">Salvar</button>
                            <button type="reset" class="btn">Limpar</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>


    <div class="row-fluid sortable">		
        <div class="box span12">
            <div class="box-header" data-original-title>
                <h2><i class="halflings-icon white user"></i><span class="break"></span>Members</h2>
                <div class="box-icon">
                    <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                </div>
            </div>
            <div class="box-content">
                <table class="table bootstrap-datatable" id="table-clientes">
                    <thead>
                        <tr>
                            <th>Descrição</th>
                            <th>Telefones</th>
                            <th>Emails</th>
                            <th></th>
                        </tr>
                    </thead>   
                    <tbody>
                    </tbody>
                </table>            
            </div>
        </div><!--/span-->

    </div><!--/row-->




{% endblock %}


{% block javascriptLocal %}
    {{ parent() }}
    <script> 
        AtaController().init();
        TelefoneController().init();
        EmailController().init();
    </script>
{% endblock %}